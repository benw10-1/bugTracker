<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>login page</title>
    <link rel='stylesheet' href='/style/dashboard.css' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link href='../statics/style/dashboard.css' rel='stylesheet' />

  </head>

  <body>
    <nav class='dashboard-nav'>
      <div id='main-logo'><i class='fa-solid fa-bug-slash'></i>Bug Tracker</div>
      <div id='nav-login-btn-container'>
        {{! <a class='nav-login' href='./login'><button
            class='btn btn-sm'
          >Login</button></a> }}
        <button id='logout' class='logout-btn'><a href='#'></a>Logout</button>
      </div>
    </nav>
    <main class='main-content'>
      <div class='table-header'>
        <h6>Projects</h6>
        <button
          class='add-bug-btn'
          data-bs-toggle='modal'
          data-bs-target='#staticBackdrop'
        ><a href='/projects/create'></a>Add</button>
        <div
          class='modal fade'
          id='staticBackdrop'
          data-bs-backdrop='static'
          data-bs-keyboard='false'
          tabindex='-1'
          aria-labelledby='staticBackdropLabel'
          aria-hidden='true'
        >
          <div class='modal-dialog'>
            <div class='modal-content'>
              <div class='modal-header'>
                <h5 class='modal-title' id='staticBackdropLabel'>Add Project</h5>
                <button
                  type='button'
                  class='btn-close'
                  data-bs-dismiss='modal'
                  aria-label='Close'
                ></button>
              </div>
              <div class='modal-body modal-questions'>
                <label>Project Name</label>
                <input
                  id='new-proj-name'
                  type='text'
                  placeholder='Bug Tracker'
                />
                <label>Description</label>
                <input
                  id='new-proj-desc'
                  type='text'
                  placeholder='Application that helps track bugs...'
                />
              </div>
              <div class='modal-footer'>
                <button
                  type='button'
                  class='btn btn-secondary'
                  data-bs-dismiss='modal'
                >Close</button>
                <button
                  type='button'
                  class='btn btn-primary'
                  id='new-project'
                >Add Project</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class='projects-table-container'>
        <table class='table'>
          <thead class='thead-dark'>
            <tr>
              <th scope='col'>#</th>
              <th scope='col'>PROJECT</th>
              <th scope='col'>DESCRIPTION</th>
              <th scope='col'>DELETE</th>
            </tr>
          </thead>
          <tbody>
            {{#if finalProjects.length}}
              {{#each finalProjects as |project|}}
                <tr>
                  <td>{{project.number}}</td>
                  <td><a
                      class='project-name-dashboard'
                      href='/projects/{{project.id}}'
                    >{{project.name}}</a></td>
                  <td>{{project.description}}</td>
                  {{#if (ifEqual user.id project.creator)}}
                    <td>
                      <button
                        data-bs-toggle='modal'
                        data-bs-target='#deleteProject-{{project.number}}'
                        class='delete-project-btn'
                      >
                        <i class='fa-solid fa-xmark delete-project'></i>

                      </button>
                      <div
                        class='modal fade'
                        id='deleteProject-{{project.number}}'
                        tabindex='-1'
                        aria-labelledby='updateModal'
                        aria-hidden='true'
                      >
                        <div class='modal-dialog'>
                          <div class='modal-content'>
                            <div class='modal-header'>
                              <h5 class='modal-title' id='updateModal'>Delete
                                "{{project.name}}"</h5>
                              <button
                                type='button'
                                class='btn-close'
                                data-bs-dismiss='modal'
                                aria-label='Close'
                              ></button>
                            </div>
                            <div class='modal-body'>
                              <p>WARNING! Are you sure you want to delete this
                                project?</p>
                            </div>
                            <div class='modal-footer'>
                              <button
                                type='button'
                                class='btn btn-secondary'
                                data-bs-dismiss='modal'
                              >Close</button>
                              <button
                                project-id='{{project.id}}'
                                id='delete-project'
                                type='button'
                                class='btn btn-danger'
                              >Delete Project</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </td>
                  {{/if}}
                </tr>
              {{/each}}
            {{/if}}
          </tbody>
        </table>
      </div>
    </main>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js'
      integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13'
      crossorigin='anonymous'
    ></script>
  </body>
</html>

<script src='scripts/base.js'></script>
<script src='scripts/main.js'></script>