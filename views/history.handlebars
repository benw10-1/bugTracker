<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>History</title>
    <link rel='stylesheet' href='/style/dashboard.css' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link href='/style/bugs.css' rel='stylesheet' />
    <link rel='stylesheet' href='/style/history.css' />

  </head>

  <body>
    <nav class='dashboard-nav'>
      <div id='main-logo'><i class='fa-solid fa-bug-slash'></i>Bug Tracker</div>
      <div id='nav-login-btn-container'>
        {{! <a class='nav-login' href='./login'><button
            class='btn btn-sm'
          >Login</button></a> }}
      </div>
    </nav>
    <div class='back-container'>
      <h1>
        <a href='/projects/{{project.id}}' id='login-back'>
          <strong>&#60;</strong>
          Back</a>
      </h1>
    </div>
    {{#if isContributor}}
      <main class='main-content'>
        <div class='table-header'>
          <h6>Bug Change History</h6>

          <div
            class='modal fade'
            id='staticBackdrop'
            data-bs-backdrop='static'
            data-bs-keyboard='false'
            tabindex='-1'
            aria-labelledby='staticBackdropLabel'
            aria-hidden='true'
          ></div>
        </div>
        <div class='projects-table-container'>
          <table class='table'>
            <thead class='thead-dark'>
              <tr>
                <th scope='col'>ID</th>
                <th scope='col'>BUG</th>
                <th scope='col'>DESCRIPTION</th>
                <th scope='col'>USER</th>
                <th scope='col'>UPDATED</th>
              </tr>
            </thead>
            <tbody>
              {{#if bugList.length}}
                {{#each bugList as |bug|}}
                  <tr>
                    <td>{{split bug.id}}</td>
                    <td>{{bug.title}}</td>
                    <td>{{bug.description}}</td>
                    <td>{{bug.username}}</td>
                    <td>{{bug.date_created}}</td>
                  </tr>
                {{/each}}
              {{/if}}
            </tbody>
          </table>
        </div>
      </main>
      <script
        src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js'
        integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13'
        crossorigin='anonymous'
      ></script>

    {{else}}
      <div class='project-name-container'>
        <h6>You don't have access to this bug's history</h6>
      </div>
    {{/if}}
  </body>
</html>

<script src='scripts/base.js'></script>
<script src='scripts/main.js'></script>