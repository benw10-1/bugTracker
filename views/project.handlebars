      <div class='bugs-container'>
        <div class='bugs-header'>
          <h6>Bugs/Issues</h6>
          <button
            class='add-bug-btn'
            data-bs-toggle='modal'
            data-bs-target='#exampleModal'
          ><a href='/projects/create'></a>Add Bug</button>
          <div
            class='modal fade'
            id='exampleModal'
            tabindex='-1'
            aria-labelledby='exampleModalLabel'
            aria-hidden='true'
          >
            <div class='modal-dialog'>
              <div class='modal-content'>
                <div class='modal-header'>
                  <h5 class='modal-title' id='exampleModalLabel'>Add Bug</h5>
                  <button
                    type='button'
                    class='btn-close'
                    data-bs-dismiss='modal'
                    aria-label='Close'
                  ></button>
                </div>
                <div class='modal-body modal-questions'>
                  <label>Bug Title</label>
                  <input type='text' placeholder='Title of bug' />
                  <label>Bug Description</label>
                  <input type='text' placeholder='Description of bug' />
                </div>
                <div class='modal-footer'>
                  <button
                    type='button'
                    class='btn btn-secondary'
                    data-bs-dismiss='modal'
                  >Close</button>
                  <button type='button' class='btn btn-primary'>Add Bug</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='table-bug'>
          <table class='table'>
            <thead class='thead-dark'>
              <tr>
                <th scope='col'>BUG TITLE</th>
                <th scope='col'>DESCRIPTION</th>
                <th scope='col'>USER</th>
              </tr>
            </thead>
            {{#if bugs.length}}
              {{#each bugs as |bug|}}
                <tbody>
                  <tr>
                    <td>{{bug.title}}</td>
                    <td>{{bug.description}}</td>
                    <td>{{bug.user.username}}</td>
                  </tr>
                </tbody>
              {{/each}}
            {{/if}}
          </table>
        </div>
      </div>
      <div class='contributors-container'>
        <div class='contributors-header'>
          <h6>Contributors</h6>
